<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="1dp"
            android:padding="16dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="Tags Demo"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:gravity="center"
                        android:padding="6dp"
                        android:layout_marginLeft="8dp"
                        android:text="Tags Demo"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:gravity="center"
                        android:padding="6dp"
                        android:layout_marginLeft="8dp"
                        android:text="Tags Demo"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:gravity="center"
                        android:padding="6dp"
                        android:layout_marginLeft="8dp"
                        android:text="Tags Demo"
                        android:textSize="12sp" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textColor="@color/cardview_dark_background"
                android:paddingBottom="8dp"
                android:paddingTop="16dp"
                android:text="Animation Video Developer Needed urgently"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="1"
                android:text="Graphic Design, Animation, Video Talent, Video Design" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/time_past"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 days" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€” " />

                <TextView
                    android:id="@+id/number_bids"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 bids" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>